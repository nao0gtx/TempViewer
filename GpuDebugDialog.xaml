<ContentDialog
    x:Class="TransparentWinUI3.GpuDebugDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GPU Debayer Debug"
    PrimaryButtonText="Render"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="10" MinWidth="400">
        <TextBlock Text="Adjust parameters to test rendering:" FontWeight="SemiBold"/>

        <Grid ColumnDefinitions="*,10,*" RowDefinitions="Auto,Auto">
            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock Text="Width (Pixels)"/>
                <TextBox Text="{x:Bind ImageWidth, Mode=TwoWay}" InputScope="Number"/>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="2">
                <TextBlock Text="Height (Pixels)"/>
                <TextBox Text="{x:Bind ImageHeight, Mode=TwoWay}" InputScope="Number"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                 <TextBlock Text="Bayer Pattern"/>
                 <ComboBox SelectedIndex="{x:Bind PatternIndex, Mode=TwoWay}" HorizontalAlignment="Stretch">
                     <ComboBoxItem Content="RGGB (0)"/>
                     <ComboBoxItem Content="BGGR (1)"/>
                     <ComboBoxItem Content="GRBG (2)"/>
                     <ComboBoxItem Content="GBRG (3)"/>
                 </ComboBox>
            </StackPanel>
        </Grid>

        <TextBlock Text="Debug Log:" Margin="0,10,0,5"/>
        <TextBox Text="{x:Bind LogText, Mode=OneWay}" IsReadOnly="True" Height="150" AcceptsReturn="True" 
                 ScrollViewer.VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
    </StackPanel>
</ContentDialog>
